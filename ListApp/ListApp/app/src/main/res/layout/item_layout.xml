<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="false"
    android:focusable="false"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/item_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <CheckBox
            android:id="@+id/item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/item_checkbox"
            android:layout_alignBottom="@+id/item_checkbox"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/item_checkbox"
            android:layout_toRightOf="@+id/item_checkbox"
            android:gravity="center"
            android:text="List item"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/item_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_name"
            android:layout_alignBottom="@+id/item_name"
            android:layout_toEndOf="@+id/item_name"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:src="@android:drawable/ic_delete" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>